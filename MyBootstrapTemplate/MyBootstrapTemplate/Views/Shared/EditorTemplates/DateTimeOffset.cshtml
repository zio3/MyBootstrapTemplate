@model DateTimeOffset?
@{
    Dictionary<string, object> dic = new Dictionary<string, object>();
    dic.Add("class", "form-control type-datetime");
    var str = string.Empty;
    if (Model.HasValue)
    {
        var data = Model.Value.ToOffset(TimeSpan.FromHours(9));

        str = string.Format("{0:yyyy/MM/dd HH:mm:ss}", data);
    }


}@Html.TextBox("", str, dic)